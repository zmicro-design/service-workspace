export SERVICE_NAME=workspace

export SERVICE_WORKSPACE_IMAGE_VERSION=v1.4

export SERVICE_WORKSPACE_SOURCE_CODE_DIR=$SERVICE_DATA/code
export SERVICE_WORKSPACE_COMPANY=${SERVICE_WORKSPACE_COMPANY}
export SERVICE_WORKSPACE_SSH_PORT=${SERVICE_WORKSPACE_SSH_PORT:-30022}
export SERVICE_WORKSPACE_HTTP_SERVICE_PORT=${SERVICE_WORKSPACE_HTTP_SERVICE_PORT:-30080}

export SERVICE_WORKSPACE_PREVILEGED=${SERVICE_WORKSPACE_PREVILEGED}

export SERVICE_WORKSPACE_SSH_CONFIG=${SERVICE_DATA}/.ssh
export SERVICE_WORKSPACE_GPM_CONFIG=${SERVICE_DATA}/.gpm
export SERVICE_WORKSPACE_VSCODE_CONFIG=${SERVICE_DATA}/.vscode-server
export SERVOCE_WORKSPACE_ZMICRO_DATA=${SERVICE_DATA}/zmicro_data

# @TODO Mac M1 create_host_path does not work
if [ ! -d "$SERVICE_WORKSPACE_SOURCE_CODE_DIR" ]; then
  mkdir -p $SERVICE_WORKSPACE_SOURCE_CODE_DIR
fi

if [ ! -d "$SERVICE_WORKSPACE_SSH_CONFIG" ]; then
  mkdir -p $SERVICE_WORKSPACE_SSH_CONFIG
fi

if [ ! -d "$SERVICE_WORKSPACE_GPM_CONFIG" ]; then
  mkdir -p $SERVICE_WORKSPACE_GPM_CONFIG
fi

if [ ! -d "$SERVICE_WORKSPACE_VSCODE_CONFIG" ]; then
  mkdir -p $SERVICE_WORKSPACE_VSCODE_CONFIG
fi

if [ ! -d "$SERVOCE_WORKSPACE_ZMICRO_DATA" ]; then
  mkdir -p $SERVOCE_WORKSPACE_ZMICRO_DATA
fi
